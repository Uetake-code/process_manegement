 <div class="text-center">
   <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        <h2 class="h3 mb-3 font-weight-normal">ログイン</h2>
      </div>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス" %>
    </div>

    <div class="field" style="margin-top: 5px">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"記憶する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン",class:"btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links"%>

    </div>
  </div>
  </div>

